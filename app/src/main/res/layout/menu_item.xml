<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_food"
        style="@style/BackGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/dummy_text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_alignStart="@id/iv_food"
        android:layout_alignEnd="@id/iv_food"
        android:layout_alignBottom="@id/iv_food"
        android:background="@drawable/tv_gradient_background">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:text="@string/dummy_text"
            android:textColor="#272525"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>


</RelativeLayout>
